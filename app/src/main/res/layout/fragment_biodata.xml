<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall30"
    android:scrollbars="vertical"
    tools:context=".biodata">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My Biodata"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:fontFamily="cursive"
            android:textSize="35sp"/>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/fina"/>

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="Nama : Anisa Refina"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/jenis_kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="Jenis Kelamin : Perempuan"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="TTL : Baturaja, 11 Juni 1999"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/agama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="Agama : Islam"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/hobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="Hobi : Memasak, menonton, jalan-jalan"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:text="Alamat : Jln. Lunjuk Jaya, Perum Griya Poli Indah No C11"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/no_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="No Hp : 082183808268"
            android:textSize="15dp"/>

    </LinearLayout>



</FrameLayout>